{
  "cursor.chat.includePaths": [
    "src/**/*.py",
    "tests/**/*.py",
    "coding-standards.md",
    "README.md",
    "pyproject.toml",
    "static/**/*",
    "templates/**/*.j2",
    "config.yaml",
    "config.example.yaml"
  ],
  "cursor.chat.excludePaths": [
    "**/__pycache__/**",
    "**/.pytest_cache/**",
    "**/.ruff_cache/**",
    "**/htmlcov/**",
    "**/.benchmarks/**"
  ],
  "cursor.chat.contextPatterns": {
    "powerOptimization": [
      "**/power.py",
      "**/models/config.py"
    ],
    "displayControl": [
      "**/display.py",
      "**/renderer.py"
    ],
    "apiCommunication": [
      "**/client.py",
      "**/server.py",
      "**/main.py",
      "**/api.py"
    ],
    "weatherData": [
      "**/models/weather.py",
      "owm_icon_map.csv"
    ],
    "configuration": [
      "**/config.py",
      "config*.yaml",
      "pyproject.toml"
    ],
    "scheduling": [
      "**/scheduler.py"
    ],
    "templates": [
      "templates/**/*.j2"
    ],
    "system": [
      "**/models/system.py",
      "**/network.py",
      "**/logging.py"
    ]
  },
  "editor.formatOnSave": true,
  "python.analysis.typeCheckingMode": "strict",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": false,
  "python.linting.mypyEnabled": false,
  "python.linting.ruffEnabled": true,
  "python.linting.ruffPath": "${workspaceFolder}/.venv/bin/ruff",
  "editor.codeActionsOnSave": {
    "source.fixAll.ruff": true,
    "source.organizeImports.ruff": true
  }
}