{
  "version": "3.0",
  "report": {
    "dependency-vulnerabilities": {
      "enabled": true,
      "auto-ignore-in-report": {
        "python": {
          "environment-results": true,
          "unpinned-requirements": false
        },
        "cvss-severity": null,
        "vulnerabilities": {}
      }
    }
  },
  "installation": {
    "deny": {
      "vulnerabilities": {
        "error-on-any-of": {
          "cvss-severity": [
            "critical",
            "high"
          ]
        },
        "warning-on-any-of": {
          "cvss-severity": [
            "medium"
          ]
        }
      }
    },
    "default-action": "allow"
  },
  "security-updates": {
    "dependency-vulnerabilities": {
      "auto-security-updates-limit": [
        "patch"
      ]
    }
  },
  "scanning-settings": {
    "system": {
      "targets": [
        "."
      ]
    },
    "exclude": [
      ".git",
      "__pycache__",
      "*.pyc",
      ".pytest_cache",
      ".ruff_cache",
      "htmlcov",
      "docs/_build",
      "logs",
      "*.log",
      ".venv",
      "venv",
      "node_modules",
      "dist",
      "build",
      "*.egg-info",
      ".coverage",
      "coverage.xml",
      ".mypy_cache",
      ".tox",
      "static/icons/*.svg",
      "static/fonts/*.woff2"
    ],
    "include-files": [
      "pyproject.toml",
      "poetry.lock",
      "requirements*.txt"
    ],
    "max-depth": 6
  },
  "fail-scan-with-exit-code": {
    "dependency-vulnerabilities": {
      "enabled": true,
      "fail-on-any-of": {
        "cvss-severity": [
          "critical",
          "high"
        ],
        "exploitability": [
          "critical",
          "high"
        ]
      }
    }
  },
  "policy-comment": "Custom policy for rpi_weather_display project - focuses on production dependencies only"
}